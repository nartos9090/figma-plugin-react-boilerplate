{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["ui/*"],
      "@api/*": ["api/*"]
    },
    "types": ["@figma/plugin-typings"]
  },
  "include": ["ui", "api", "declarations.d.ts", "tailwind.config.cjs"]
}
